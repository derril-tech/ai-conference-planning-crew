â€¢	attendees(id, event_id, profile jsonb, tickets[], consent_status, checkins[])
â€¢	tickets(id, event_id, type, price, promo_rules jsonb), payments(id, ticket_id, provider, status, amount)
â€¢	tasks(id, event_id, owner_id, agent, state, deps[], due, notes)
â€¢	knowledge_sources(id, url|file, type, snapshot_uri, as_of, license), chunks(id, source_id, text, vector, offsets)
â€¢	runs(id, event_id, graph_version, status, checkpoints jsonb, cost, durations), approvals(id, run_id, gate, actor_id, decision, notes)
â€¢	audit_logs(id, actor, action, target_type, target_id, before/after jsonb, ts)
Connectors:
